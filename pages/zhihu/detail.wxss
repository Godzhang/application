.art-header{
    position: relative;
    width: 100%;
    height: 440rpx;
    color: #FFF;
}

.art-img{
    width: 100%;
    height: 440rpx;
}

.art-title{
    position: absolute;
    bottom: 50rpx;
    left: 30rpx;
    right: 130rpx;
    font-size: 40rpx;
}

.art-source {
    position: absolute;
    bottom: 16rpx;
    font-size: 24rpx;
    right: 16rpx;
}

.art-content{
    font-size: 28rpx;
    color: #616466;
    padding-left: 32rpx;
    padding-right: 32rpx;
    padding-bottom: 20rpx;
    background-color: #FFF;
    line-height: 1.5;
}
.art-subtitle{
    font-size: 34rpx;
    color: #000;
    padding: 30rpx 0;
}
.avatar-info{
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    height: 40rpx;
    margin-bottom: 25rpx;
}
.avatar-info image{
    flex-shrink: 0;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-right: 10rpx;
    overflow: hidden;
}
.avatar-name{
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.avatar-job{
    font-size: 25rpx;
    color: #666;
}
.art-item{
    margin-bottom: 25rpx;
    font-size: 30rpx;
    color: #333;
}
.more-button{
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    background: #f1f1f1;
    color: #666;
}





