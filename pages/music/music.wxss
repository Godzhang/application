.search-area{
    padding: 30rpx 20rpx;
    border-bottom: 2rpx solid rgba(0, 0, 0, .1);
}
.search-box{
    position: relative;
    height: 60rpx;
    background: #ebecec;
    padding: 0 60rpx;
    border-radius: 60rpx;
}
.search-box input{
    display: inline-block;
    width: 100%;
    height: 60rpx;
    font-size: 28rpx;
    color: #333;
}
.search-icon{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    width: 60rpx;
    height: 60rpx;
}
.search-icon view{
    width: 30rpx;
    height: 30rpx;
    background-image: url(data:image/svg+xml;base64,);
}
.close-icon{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    right: 0;
    width: 60rpx;
    height: 60rpx;
}
.close-icon view{
    width: 28rpx;
    height: 28rpx;
    background-image: url(data:image/svg+xml;base64,);
}
.search-help{
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    color: #507daf;
    font-size: 30rpx;
    border-bottom: 2rpx solid rgba(0, 0, 0, .1);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.song-item{
    padding-left: 20rpx;
    border-bottom: 2rpx solid rgba(0, 0, 0, .1);
}
.song-item-box{
    width: 100%;
    display: flex;
    justify-content: space-between;
}
.song-left{
    max-width: 700rpx;
    padding: 12rpx 0;
    overflow: hidden;
}
.song-name{
    font-size: 32rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.song-info{
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    color: #888;
    overflow: hidden;
}
.songer{
    color: #507daf;
}
.play-btn{
    display: flex;
    align-items: center;
    padding: 0 20rpx;
}
.play-btn text{
    display: block;
    width: 44rpx;
    height: 44rpx;
    background: url(//s3.music.126.net/m/s/img/index_icon_2x.png?5207a28c3767992ca4bb6d4887c74880) no-repeat;
    background-size: 332rpx 194rpx;
    background-position: -48rpx 0;
}

.search-tip{
    position: relative;
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx 0 80rpx;
    font-size: 30rpx;
    border-bottom: 2rpx solid rgba(0, 0, 0, .1);
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.search-tip .search-icon{
    top: 22.5rpx;
    left: 20rpx;
    width: 35rpx;
    height: 35rpx;
}
.search-tip .search-icon view{
    width: 35rpx;
    height: 35rpx;
}
